\beamer@headheight=0.13\paperwidth

\definecolor{uncblue}{HTML}{f26b27}
\definecolor{oxygengray}{HTML}{686868}
\definecolor{oxygenlightgray}{HTML}{eeeeee}
\setbeamercolor*{Title bar}{fg=black}
\setbeamercolor*{Location bar}{fg=uncblue,bg=oxygenlightgray}
\setbeamercolor*{frametitle}{parent=Title bar}
\setbeamercolor*{block title}{bg=uncblue,fg=black}
\setbeamercolor*{block body}{bg=oxygenlightgray,fg=oxygengray}
\setbeamercolor*{normal text}{bg=white,fg=black}
%\setbeamercolor*{normal text}{bg=white,fg=oxygengray}  %% switched to above (black) 01-05-09
\setbeamercolor*{section in head/foot}{bg=uncblue,fg=white}

\usecolortheme[named=uncblue]{structure}


\setbeamerfont{section in head/foot}{size=\tiny,series=\normalfont}
\setbeamerfont{frametitle}{size=\large,series=\normalfont}  %% Switched from \Large 01-05-09

%\setbeamertemplate{headline}
\setbeamertemplate{frametitle}
{
  \vskip-0.25\beamer@headheight
  \vskip-\baselineskip
  \vskip0.4cm
  \hskip1.7cm\usebeamerfont*{frametitle}\insertframetitle
  \vskip-.10em
  \hskip0.7cm\usebeamerfont*{framesubtitle}\insertframesubtitle
}

\setbeamertemplate{headline}
{
  \pgfuseimage{onu_template}
  \vskip -1.7cm
  \linethickness{0pt}

  \framelatex{
  \begin{beamercolorbox}[wd=\paperwidth,ht=0.3\beamer@headheight]{Title bar}
    \usebeamerfont{section in head/foot}%
    \insertsectionnavigationhorizontal{0pt}{\hskip0.22cm}{}%
  \end{beamercolorbox}}

  \framelatex{
  \begin{beamercolorbox}[wd=\paperwidth,ht=0.7\beamer@headheight]{Title bar}
  \end{beamercolorbox}}
}

